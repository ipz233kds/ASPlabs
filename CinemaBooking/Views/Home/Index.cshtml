@model SessionListViewModel

@{
    ViewData["Title"] = "Доступні Сеанси";
}

<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var session in Model.MovieSessions)
    {
        <partial name="_MovieSessionCard" model="session" />
    }
</div>

<div page-model="Model.PagingInfo"
     page-action="Index"
     page-url-genre="@Model.CurrentGenre!"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1">
</div>