@model ProfileViewModel

@{
    ViewBag.Title = "Особистий кабінет";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Інформація про користувача</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Ім'я користувача:</dt>
                    <dd class="col-sm-8">@Model.User?.UserName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.User?.Email</dd>


                </dl>

                <div class="text-end mt-3">
                    <a asp-action="Logout" asp-controller="Account" class="btn btn-danger">Вийти</a>
                </div>
            </div>
        </div>
    </div>
</div>