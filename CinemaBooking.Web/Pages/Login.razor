@page "/login"
@using CinemaBooking.Shared.DTOs
@using CinemaBooking.Web.Services
@inject AuthService AuthService
@inject LoginDto loginModel
@inject NavigationManager Navigation

<h3>Вхід</h3>

<EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Ім'я користувача:</label>
        <InputText class="form-control" @bind-Value="loginModel.Username" />
        <ValidationMessage For="@(() => loginModel.Username)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Пароль:</label>
        <InputText type="password" class="form-control" @bind-Value="loginModel.Password" />
        <ValidationMessage For="@(() => loginModel.Password)" />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <button type="submit" class="btn btn-primary">Увійти</button>
</EditForm>

@code {
    private string? errorMessage;

    private async Task HandleLogin()
    {
        errorMessage = null;

        bool success = await AuthService.LoginAsync(loginModel);

        if (success)
        {
            Navigation.NavigateTo("/movies");
        }
        else
        {
            errorMessage = "Помилка: Неправильний логін або пароль.";
        }
    }
}