@model IEnumerable<MovieSession>

@{
    ViewBag.Title = "Управління Сеансами";
}

<h3 class="mb-3">@ViewBag.Title</h3>

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<table class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фільм</th>
            <th>Зал</th>
            <th class="text-end">Ціна</th>
            <th>Час</th>
            <th class="text-center">Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Немає сеансів</td>
            </tr>
        }
        else
        {
            @foreach (var session in Model)
            {
                <tr>
                    <td>@session.MovieSessionID</td>
                    <td>@session.Movie?.Title</td>
                    <td>@session.Hall</td>
                    <td class="text-end">@session.Price.ToString("c", System.Globalization.CultureInfo.GetCultureInfo("uk-UA"))</td>
                    <td>@session.SessionTime.ToString("g")</td>
                    <td class="text-center">

                        <a asp-action="EditSession" asp-route-sessionId="@session.MovieSessionID"
                           class="btn btn-sm btn-warning">
                            Редагувати
                        </a>
                        <a asp-action="SessionDetails" asp-route-sessionId="@session.MovieSessionID"
                           class="btn btn-sm btn-info">
                            Деталі
                        </a>

                        <a asp-action="DeleteSessionConfirmation" asp-route-sessionId="@session.MovieSessionID"
                           class="btn btn-sm btn-danger">
                            Видалити
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="CreateSession" class="btn btn-primary">Створити Новий Сеанс</a>
    <a asp-action="Index" class="btn btn-secondary">Управління Фільмами</a>
</div>