@model Movie

@{
    ViewBag.Title = $"Видалити Фільм: {Model?.Title ?? "Не знайдено"}";
}

<h3 class="mb-3 text-danger">@ViewBag.Title</h3>

@if (Model == null)
{
    <div class="alert alert-warning">Фільм не знайдено.</div>
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Повернутися до Списку</a>
    </div>
}
else
{
    <div class="alert alert-danger">
        Ви впевнені, що хочете видалити фільм <strong>@Model.Title</strong>?
        <br />
        <small>(Увага! Ця дія також може видалити пов'язані сеанси).</small>
    </div>

    <form asp-action="DeleteMovie" method="post">
        <input type="hidden" name="MovieID" value="@Model.MovieID" />

        <div class="text-center">
            <button type="submit" class="btn btn-danger">Так, Видалити</button>
            <a asp-action="Index" class="btn btn-secondary">Ні, Скасувати</a>
        </div>
    </form>
}